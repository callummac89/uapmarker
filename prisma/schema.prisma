generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // or "postgresql"
  url      = env("DATABASE_URL")
}

model Sighting {
  id          String   @id @default(cuid())
  date        DateTime
  city        String
  latitude    Float
  longitude   Float
  noise       String // e.g. Silent, Loud, Humming
  shape       Shape
  count       Int // # of UAP
  description String
  imageUrl    String? // Optional image
  createdAt   DateTime @default(now())
}

enum Shape {
  Light
  Sphere
  Triangle
  Orb
  Cigar
  Other
}
