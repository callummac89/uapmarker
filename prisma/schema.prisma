generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // or "postgresql"
  url      = env("DATABASE_URL")
}

model Sighting {
  id             String   @id @default(cuid())
  latitude       Float
  longitude      Float
  description    String
  city           String
  shape          String
  date           DateTime
  noise          String
  count          Int
  imageUrl       String?
  historical     Boolean  @default(false)
  historicalName String? // e.g. "Roswell Incident"
}

enum Shape {
  Light
  Sphere
  Triangle
  Orb
  Cigar
  Other
}
